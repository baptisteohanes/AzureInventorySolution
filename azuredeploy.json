{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "0.9.0.0",
    "parameters": {
        "automationAccountName": {
            "type": "string",
            "metadata": {
                "description": "The name of the Azure Automation account to deploy to."
            }
        },
        "logAnalyticsWorkspaceId": {
            "type": "string",
            "metadata": {
                "description": "The username for the Azure Automation credential."
            }
        },
        "logAnalyticsWorkspaceKey": {
            "type": "securestring",
            "metadata": {
                "description": "The password for the Azure Automation credential."
            }
        },
        "_artifactsLocation": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/baptisteohanes/AzureQuotasMonitoring/master",
            "metadata": {
                "description": "The base URI where artifacts required by this template are located, WITHOUT a / at the end"
            }
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "defaultValue": "",
            "metadata": {
                "description": "The sasToken required to access _artifactsLocation.  When the template is deployed using the accompanying scripts, a sasToken will be automatically generated."
            }
        }
    },
    "variables": {
        "schedulerRunbookName": "AzureQuotasMonitorSolution_Scheduler",
        "schedulerRunbookPath": "[concat('/runbooks/',variables('schedulerRunbookName'),'.ps1')]",
        "schedulerRunbookDescription": "Authenticates to Azure and list the subscriptions reachable by the service principal",
        "schedulerRunbookUri": "[concat(parameters('_artifactsLocation'),variables('schedulerRunbookPath'),parameters('_artifactsLocationSasToken'))]",
        "childRunbookName": "AzureQuotasMonitorSolution_Child",
        "childRunbookPath": "[concat('/runbooks/',variables('childRunbookName'),'.ps1')]",
        "childRunbookDescription": "Authenticates to Azure subscription, gather the quotas for the subscription and push it to OMS workspace.",
        "childRunbookUri": "[concat(parameters('_artifactsLocation'),variables('childRunbookPath'),parameters('_artifactsLocationSasToken'))]",
        "scheduleName": "AzureQuotasMonitorSolution_Scheduler",
        "jobScheduleName": "[guid(resourceGroup().id)]"
    },
    "resources": [
        {
            "type": "Microsoft.Automation/automationAccounts",
            "name": "[parameters('automationAccountName')]",
            "apiVersion": "2015-10-31",
            "location": "[resourceGroup().location]",
            "scale": null,
            "properties": {
                "sku":{
                    "name":"Basic"
                }           },
            "dependsOn": []
        },
        {
            "name": "[concat(parameters('automationAccountName'),'/AzureQuotasMonitorSolution_WorkspaceId')]",
            "type": "Microsoft.Automation/automationAccounts/variables",
            "apiVersion": "2015-10-31",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccountName'))]"
            ],
            "tags": {},
            "properties": {
                "type": "string",
                "value": "[parameters('logAnalyticsWorkspaceId')]",
                "description": "Unique ID pointing the targeted Log Analytics workspace",
                "isEncrypted": false
            }
        },
        {
            "name": "[concat(parameters('automationAccountName'),'/AzureQuotasMonitorSolution_WorkspaceKey')]",
            "type": "Microsoft.Automation/automationAccounts/variables",
            "apiVersion": "2015-10-31",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Automation/automationAccounts', parameters('automationAccountName'))]"
            ],
            "tags": {},
            "properties": {
                "type": "string",
                "value": "[parameters('logAnalyticsWorkspaceKey')]",
                "description": "Workspace Key used to push data to the targeted Log Analytics workspace",
                "isEncrypted": true
            }
        },
        {
            "name": "[variables('scheduleName')]",
            "type": "Microsoft.Automation/automationAccounts/schedules",
            "apiVersion": "2015-10-31",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceID('Microsoft.Automation/automationAccounts', parameters('automationAccountName'))]"
            ],
            "tags": {},
            "properties": {
                "description": "Azure inventory runbook execution frequency",
                "startTime": "",
                "isEnabled": "true",
                "interval": 1,
                "frequency": "Hour"
            }
        },
        {
            "name": "[variables('jobScheduleName')]",
            "type": "Microsoft.Automation/automationAccounts/jobSchedules",
            "apiVersion": "2015-10-31",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceID('Microsoft.Automation/automationAccounts', parameters('automationAccountName'))]",
                "[concat(resourceID('Microsoft.Automation/automationAccounts', parameters('automationAccountName')), '/runbooks/', variables('schedulerRunbookName'))]",
                "[concat(resourceID('Microsoft.Automation/automationAccounts', parameters('automationAccountName')), '/schedules/', variables('scheduleName'))]"
            ],
            "tags": {},
            "properties": {
                "schedule": {
                    "name": "[variables('scheduleName')]"
                  },
                  "runbook": {
                    "name": "[variables('schedulerRunbookName')]"
                  }
            }
        }

    ],
    "outputs": {}
}